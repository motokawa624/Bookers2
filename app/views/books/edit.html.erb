<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
<%= render 'error_messages', model: f.object %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <div class ="updatebook"><br><%= f.submit 'Update Book' %></div>    
<% end %>


<%= link_to 'Show', book_path(@book.user_id) %> 
<%= link_to 'Back', books_path %>
