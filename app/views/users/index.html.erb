<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <%= render 'books/list', {book: @book, user: @user} %>
        </div>

        <div class="col-xs-9" style="background-color: white;">
            <h1>Users</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
     <tr>
        <div class="block-content">
            
            <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
            
            <h3 class="block-title">
                <td>
                    <i class="fa fa-map-marker"></i><%= user.name %>
                </td> 
            </h3>
            
            <td>
                <h3 class="block-body"><%= link_to "Show", user_path(user) %></h3>
            </td>
                  
        </div>
      </tr>
    <% end %>
  </tbody>
</table>
        </div>
    </div>
</div>